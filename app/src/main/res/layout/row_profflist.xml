<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_item"
    android:layoutDirection="ltr">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:id="@+id/IV_proffIamge"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/tv_courseName_alir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اسم درس"
            android:visibility="gone" />

        <TextView
            android:text="فخاریان"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TV_ProffFamily"
            android:textAlignment="viewEnd"
            android:textSize="24sp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/bb_darkBackgroundColor" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TV_ProfRate"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:rating="1"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/TV_proffname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/TV_ProfessorsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>