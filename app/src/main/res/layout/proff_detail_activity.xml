<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mim_app.mim.proff_detail_activity">

    <ImageView
        android:id="@+id/IV_ProfDet_Profimg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:padding="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/ProgBarprofDetail"
        android:layout_alignEnd="@+id/RateBar_proffDetailactivity" />

    <TextView
        android:id="@+id/TV_ProfDet_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/IV_ProfDet_Profimg"
        android:layout_alignStart="@+id/IV_ProfDet_Profimg"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/TV_ProfDet_FAMILY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:layout_alignBaseline="@+id/TV_ProfDet_NAME"
        android:layout_alignBottom="@+id/TV_ProfDet_NAME"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_setTimeToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/myblue"
        android:text="زمان کلاس"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_profID_Detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <RatingBar
        android:id="@+id/RateBar_proffDetailactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_ProfDet_NAME"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/TV_ProffResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5555"
        android:layout_below="@+id/RateBar_proffDetailactivity"
        android:layout_toStartOf="@+id/textView4"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_border_topleft"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_profID_Detailview" />

    <ProgressBar
        android:id="@+id/ProgBarprofDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/tv_profID_Detailview"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" رزومه :  "
        android:layout_alignBaseline="@+id/TV_ProffResume"
        android:layout_alignBottom="@+id/TV_ProffResume"
        android:layout_toEndOf="@+id/RateBar_proffDetailactivity" />

</RelativeLayout>
