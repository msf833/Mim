<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mim_app.mim.proff_detail_activity">

    <ImageView
        android:id="@+id/IV_ProfDet_Profimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="81dp"
        android:layout_weight="1"
        android:padding="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <TextView
        android:id="@+id/TV_ProfDet_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/TV_ProfDet_FAMILY"
        android:layout_toEndOf="@+id/IV_ProfDet_Profimg"
        android:layout_marginBottom="36dp" />

    <TextView
        android:id="@+id/TV_ProfDet_FAMILY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:layout_below="@+id/IV_ProfDet_Profimg"
        android:layout_alignStart="@+id/TV_ProfDet_NAME"
        android:layout_marginTop="107dp" />

    <Button
        android:id="@+id/btn_setTimeToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/myblue"
        android:text="زمان کلاس"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_profID_Detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</RelativeLayout>
