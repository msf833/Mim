<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mim_app.mim.proff_detail_activity">

    <ImageView
        android:id="@+id/IV_ProfDet_Profimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:padding="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_profID_Detailview"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/TV_ProfDet_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/TV_ProfDet_FAMILY"
        android:layout_alignStart="@+id/TV_ProfDet_FAMILY" />

    <TextView
        android:id="@+id/TV_ProfDet_FAMILY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:layout_marginEnd="17dp"
        android:layout_below="@+id/IV_ProfDet_Profimg"
        android:layout_alignEnd="@+id/IV_ProfDet_Profimg" />

    <Button
        android:id="@+id/btn_setTimeToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/myblue"
        android:text="زمان کلاس"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_profID_Detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <RatingBar
        android:id="@+id/RateBar_proffDetailactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/btn_setTimeToSend"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/TV_ProffResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5555"
        android:layout_marginEnd="13dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toStartOf="@+id/TV_ProfDet_NAME" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_broder"
        android:layout_marginStart="54dp"
        android:layout_alignBottom="@+id/TV_ProfDet_NAME"
        android:layout_toEndOf="@+id/tv_profID_Detailview" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/tv_profID_Detailview"
        android:layout_marginTop="14dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_ProfDet_NAME"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/RateBar_proffDetailactivity"
        android:text=" رزومه :  " />

</RelativeLayout>
