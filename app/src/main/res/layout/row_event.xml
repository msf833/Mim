<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Tv_maincontent"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:text="TextView"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/Imge_grayStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:layout_marginEnd="12dp"
        android:layout_alignBottom="@+id/Tv_maincontent"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/Image_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        app:srcCompat="@drawable/ic_dashboard_black_24dp"
        android:layout_alignBottom="@+id/image_goldenStar"
        android:layout_toStartOf="@+id/image_qatre" />

    <ImageView
        android:id="@+id/image_goldenStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_alignTop="@+id/Imge_grayStar"
        android:layout_toStartOf="@+id/Imge_grayStar" />

    <ImageView
        android:id="@+id/image_qatre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/textSelectHandleLeft"
        android:layout_alignTop="@+id/Image_square"
        android:layout_toStartOf="@+id/image_goldenStar" />

</RelativeLayout>